<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  <mapper namespace="post">
<!--   	삭제여부가 n인 공지사항 리스트 -->
  	<select id="AllSelect" resultType="postVo">
  		SELECT * 
  			FROM post
  		WHERE board_num=#{board_num}
  			AND post_del='n'
  		ORDER BY post_dt DESC
  	</select>
  	
<!--   	게시글의 개수 -->
  	<select id="postCount" resultType="Integer">
  		SELECT COUNT(*)
  			FROM post
  		WHERE board_num=#{board_num}
  			AND post_del='n'
  	</select>
  	
<!--   	페이징처리 -->
  	<select id="postPageList" parameterType="map" resultType="postVo">
  		SELECT *
			FROM (SELECT A.*, ROWNUM rn 
				FROM (SELECT post.*
					FROM post 
					WHERE board_num=#{board_num}
					ORDER BY POST_DT DESC) A)
		WHERE rn BETWEEN (#{page}-1)*#{pageSize}+1 AND #{page}*#{pageSize}
  	</select>
  	
<!--   	검색한 결과 출력 -->
  	<select id="searchPost" parameterType="postVo" resultType="postVo">
  		SELECT * 
  			FROM post
  		WHERE post_title LIKE '%' || #{post_title} || '%'
  			AND board_num=#{board_num}
  		 ORDER BY post_dt DESC
  	</select>
  	
  	<!-- 게시글 번호에 맞는 게시글 조회 -->
  	<select id="numPost" parameterType="Integer" resultType="postVo">
  		SELECT * 
  			FROM post
  		WHERE post_num=#{post_num}
  	</select>
  	
  	<insert id="insertOpinion" parameterType="postVo">
  		INSERT INTO post
  			VALUES(
  					post_seq.NEXTVAL
  					,2
  					,#{mem_id}
  					,#{post_content}
  					,#{post_title}
  					,'n'
  					,SYSDATE
  				)
  	</insert>
  </mapper>